                    ex_tlane_ext = SELECT DISTINCT    tl.mandt,
                                                      tl.logsys,
                                                      tl.matnr,
                                                      tl.LOCNO_TO,
                                                      tl.LOCTYPE_TO,
                                                      tl.ESOKZ,
                                                      t.wrk02                   AS LOCNO_FROM,
                                                      tl.LOCTYPE_FROM,
                                                      tl.EKORG,
                                                      tl.MOT_ID,
                                                      tl.COUNTER,
                                                      tl.LIFAB,
                                                      tl.LIFBI,
                                                      tl.BSTMA,
                                                      tl.APLFZ,
                                                      tl.MEINS,
                                                      tl.INFNR,
                                                      tl.LOEKZ,
                                                      tl.PROC_PRIO,
                                                      tl.BLOCKED,
                                                      tl.CREATION_MODE,
                                                      tl.CUST_ATTR1,
                                                      tl.CUST_ATTR2,
                                                      tl.CUST_ATTR3,
                                                      tl.CUST_ATTR4,
                                                      tl.CUST_ATTR5,
                                                      tl.CUST_ATTR6,
                                                      tl.CUST_ATTR7,
                                                      tl.CUST_ATTR8,
                                                      tl.CUST_ATTR9,
                                                      tl.CUST_ATTR10,
                                                      tl.LSMIN,
                                                      tl.LSMAX,
                                                      tl.BSTRF,
                                                      tl.LOT_SIZE_X,
                                                      tl.APLFZ_X,
                                                      tl.TRANS_CALENDAR,
                                                      tl.TRANS_CALENDAR_X,
                                                      tl.SRC_LOC_TZ_X,
                                                      tl.VERID,
                                                      tl.WEBAZ,
                                                      tl.REC_CALENDAR,
                                                      tl.SHIP_CALENDAR,
                                                      tl.creation_date
                                         FROM  :lt_tlane_ext AS tl INNER JOIN t460a AS t ON tl.locno_to = t.werks AND tl.sobsl = t.sobsl;


  ENDMETHOD.
